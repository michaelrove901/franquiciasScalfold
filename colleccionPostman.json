{
  "info": {
    "name": "Franchise API",
    "_postman_id": "bancolombia-franchise",
    "description": "Colecci√≥n de prueba para todos los endpoints de Franchise API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Crear franquicia",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Franquicia Ejemplo\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/franchises",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","franchises"]
        }
      }
    },
    {
      "name": "Agregar sucursal",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Sucursal Principal\"\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/franchises/{{franchiseId}}/branches",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","franchises","{{franchiseId}}","branches"]
        }
      }
    },
    {
      "name": "Agregar producto",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Producto A\",\n  \"stock\": 10\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/franchises/{{franchiseId}}/branches/{{branchId}}/products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","franchises","{{franchiseId}}","branches","{{branchId}}","products"]
        }
      }
    },
    {
      "name": "Eliminar producto",
      "request": {
        "method": "DELETE",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": {
          "raw": "http://localhost:8080/api/franchises/{{franchiseId}}/branches/{{branchId}}/products/{{productId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","franchises","{{franchiseId}}","branches","{{branchId}}","products","{{productId}}"]
        }
      }
    },
    {
      "name": "Actualizar stock",
      "request": {
        "method": "PUT",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"stock\": 20\n}"
        },
        "url": {
          "raw": "http://localhost:8080/api/franchises/{{franchiseId}}/branches/{{branchId}}/products/{{productId}}/stock",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","franchises","{{franchiseId}}","branches","{{branchId}}","products","{{productId}}","stock"]
        }
      }
    },
    {
      "name": "Top producto por sucursal",
      "request": {
        "method": "GET",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": {
          "raw": "http://localhost:8080/api/franchises/{{franchiseId}}/top-products",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api","franchises","{{franchiseId}}","top-products"]
        }
      }
    }
  ]
